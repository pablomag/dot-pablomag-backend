<main>
    <div class="list--wrapper">
        {{#each posts as |post|}}
        {{log this}}
        <div class="list--row">
            <div class="list--date">{{fromNow createdAt}}</div>
            <div class="list--title">{{title}}</div>
            <div class="list--slug">
                <a href="/post/edit/{{slug}}">{{slug}}</a>
                <a href="#">
                    <i class="fa fa-trash btn-delete" data-post="{{ _id }}" data-image="{{ image }}"></i>
                </a>
            </div>
        </div>
        {{/each}}
    </div>
</main>